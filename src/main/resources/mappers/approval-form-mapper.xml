<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.repository.mybatis.ApprovalFormMapper">

  <resultMap id="FormMap" type="com.example.demo.domain.ApprovalFormVO">
    <result property="formCode"        column="form_code"/>
    <result property="formName"        column="form_name"/>
    <result property="description"     column="description"/>
    <result property="contentTemplate" column="content_template"/>
    <result property="active"          column="active"/>
    <result property="createdAt"       column="created_at"/>
  </resultMap>

  <select id="findByFormCodeAndActiveTrue" resultMap="FormMap">
    SELECT form_code, form_name, description, content_template, active, created_at
    FROM approval_form
    WHERE form_code = #{formCode}
      AND active = 'Y'
  </select>

  <select id="findAllActiveOrderByName" resultMap="FormMap">
    SELECT form_code, form_name, description, content_template, active, created_at
    FROM approval_form
    WHERE active = 'Y'
    ORDER BY form_name ASC
  </select>
</mapper>
