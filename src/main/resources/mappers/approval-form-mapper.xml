<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.repository.mybatis.ApprovalFormMapper">

  <resultMap id="FormMap" type="ApprovalFormVO">
    <id     property="formId"          column="form_id"/>
    <result property="code"            column="code"/>
    <result property="name"            column="name"/>
    <result property="description"     column="description"/>
    <result property="contentTemplate" column="content_template"/>
    <result property="active"          column="active"/>
    <result property="createdAt"       column="created_at"/>
  </resultMap>

  <select id="findByCodeAndActiveTrue" resultMap="FormMap">
    SELECT * FROM approval_form
     WHERE code = #{code} AND active = TRUE
  </select>

  <select id="findAllActiveOrderByName" resultMap="FormMap">
    SELECT * FROM approval_form
     WHERE active = TRUE
     ORDER BY name ASC
  </select>

</mapper>
